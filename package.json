{
  "name": "react-electron-app",
  "version": "1.0.0",
  "description": "React + Electron Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
  },
  "devDependencies": {
    "electron-builder": "^24.6.0",
    "electron": "^33.2.1"
  },
  "build": {
    "appId": "com.example.reactelectron",
    "productName": "React Electron App",
    "files": [
      "main.js",
      "frontend/build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
