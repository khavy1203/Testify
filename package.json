{
  "name": "checksubject",
  "version": "v1.0.0",
  "description": "Reactjs typescript build Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Kháº£ Vy ( fb: nhoke.bola )",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.6.0",
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.example.reactelectron",
    "productName": "KiemTraMonHoc",
    "files": [
      "main.js",
      "frontend/build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "khavy",
      "repo": "KiemTraMonHocRepo"
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "allowElevation": true
    }
  }
}