{
  "name": "checksubject",
  "version": "1.0.0",
  "description": "Reactjs typescript build Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Kháº£ Vy ( fb: nhoke.bola )",
  "license": "ISC",
  "dependencies": {
  },
  "devDependencies": {
    "electron-builder": "^24.6.0",
    "electron": "^33.2.1"
  },
  "build": {
    "appId": "com.example.reactelectron",
    "productName": "KiemTraMonHoc",
    "files": [
      "main.js",
      "frontend/build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/build/icon.ico"
